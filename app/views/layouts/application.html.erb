<!DOCTYPE html>
<html>
<head>
  <title>Concept</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag ['jquery', 'ui', 'rails', 'uploadify', 'application'] %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="container">
		<div id="header">
			<% if user_signed_in? %>
				<%= current_user.email %> or 
				<%= link_to "Sign out", destroy_user_session_path %>
				<%= link_to "Upload", new_question_path %>
			<% else %>
				<%= link_to "Sign up", new_user_registration_path %> or  
			    <%= link_to "Sign in", new_user_session_path %>
			<% end %>
		</div>
		<div id="wrapper">
			<%= yield %>
		</div>
		<div id="footer">
		</div>
	</div>
</body>
</html>
