<div id='entry'>
	<div class='status'>
		<div class='username'><%= @question.user.name %></div>
		<div class='postime'><%= time_ago_in_words @question.created_at %></div>
	</div>
	<div class='post'>
		<%= @question.body %>
	</div>
</div>
<div id='view'>
	<div id='photo_thumbs'>
		<% @question.photos.each do |photo| %>
			<%= link_to image_tag(photo.item.url(:square)), photo, :remote => true %>
		<% end -%>
	</div>
	<div id="preview_page">
	</div>
</div>
<%= render :partial => 'upload_js' %>
<%= form_tag({:controller => 'photos', :action => 'upload'}, :html => { :multipart => true }) do |f| %>
	<div class='form_ops'>
		<%= submit_tag 'Upload My Images', :class => 'submit' %>
		<div class='uploader'>
		<%= file_field_tag :item, :class => 'item' %>
		</div>
	</div>
<% end %>
<%= render :partial => '/partials/upload_area' %>